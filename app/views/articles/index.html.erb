<h1>ブログ</h1>

<table class="table">
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th colspan="3"></th>
  </tr>
 
<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to '開く', article_path(article), class: 'btn btn-default pull-right' %></td>
    <td><%= link_to '編集', edit_article_path(article), class: 'btn btn-default pull-right' %></td>
    <td><%= link_to '削除', article_path(article),
                    method: :delete, data: { confirm: '本当に削除しますか' },
                    class: 'btn btn-default pull-right' %></td>
  </tr>
<% end %>
</table>

<hr>


<%= link_to '新規', new_article_path, class: 'btn btn-default' %>
